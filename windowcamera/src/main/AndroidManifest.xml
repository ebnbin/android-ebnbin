<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ebnbin.windowcamera">
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".AppApplication"
        android:label="@string/eb_label"
        android:largeHeap="true"
        tools:replace="android:name, android:label">
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/EBTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts"/>
        </activity>

        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="fullUser"/>

        <activity android:name=".album.AlbumActivity"/>

        <activity android:name=".album.AlbumShortcutActivity"/>

        <activity-alias
            android:name="AlbumShortcutActivity"
            android:icon="@mipmap/shortcut_album"
            android:label="@string/album"
            android:targetActivity=".album.AlbumShortcutActivity">
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT"/>
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".imagevideo.ImageVideoActivity"
            android:theme="@style/EBTheme.ImageVideo"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <service android:name=".service.WindowCameraService"/>

        <receiver android:name=".service.StopWindowCameraServiceBroadcastReceiver"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ebnbin.windowcamera.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/eb_file_paths"/>
        </provider>
    </application>
</manifest>
