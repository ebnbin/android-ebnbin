<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ebColorBackgroundFloatingInverse" format="reference"/>
    <attr name="ebThemeOverlay" format="reference"/>
    <attr name="ebThemeOverlayInverse" format="reference"/>

    <bool name="eb_is_not_night">true</bool>

    <color name="eb_status_bar">@android:color/white</color>
    <color name="eb_window_background">@color/eb_material_gray_50</color>
    <color name="eb_primary">@color/eb_material_light_blue_500</color>
    <color name="eb_secondary">@color/eb_material_blue_gray_900</color>
    <color name="eb_background_floating">@android:color/white</color>
    <color name="eb_background_floating_inverse">@color/eb_material_gray_800</color>

    <style name="EBBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/eb_window_background</item>
        <item name="android:windowLightStatusBar">@bool/eb_is_not_night</item>
        <item name="android:statusBarColor">@color/eb_status_bar</item>
        <item name="colorPrimary">@color/eb_primary</item>
        <item name="colorPrimaryDark">@color/eb_primary</item>
        <item name="colorAccent">@color/eb_primary</item>
        <item name="colorSecondary">@color/eb_secondary</item>
        <item name="colorBackgroundFloating">@color/eb_background_floating</item>
        <item name="ebColorBackgroundFloatingInverse">@color/eb_background_floating_inverse</item>
        <item name="ebThemeOverlay">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="ebThemeOverlayInverse">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <!-- Base theme. -->
    <style name="EBTheme" parent="EBBaseTheme"/>
</resources>
