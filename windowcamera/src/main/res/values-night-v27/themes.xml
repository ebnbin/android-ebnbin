<?xml version="1.0" encoding="utf-8"?>
<resources>
    <bool name="eb_is_not_night">false</bool>

    <color name="eb_status_bar">@android:color/black</color>
    <color name="eb_window_background">@color/eb_material_gray_900</color>
    <color name="eb_primary">@color/eb_material_light_blue_700</color>
    <color name="eb_secondary">@color/eb_material_gray_500</color>
    <color name="eb_background_floating">@color/eb_material_gray_800</color>
    <color name="eb_background_floating_inverse">@android:color/white</color>

    <!-- Base theme. -->
    <style name="EBTheme" parent="EBBaseTheme">
        <item name="android:windowLightNavigationBar">@bool/eb_is_not_night</item>
        <item name="android:navigationBarColor">@color/eb_status_bar</item>
        <item name="ebThemeOverlay">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="ebThemeOverlayInverse">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>
</resources>
