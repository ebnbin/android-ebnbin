<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ebThemeOverlay" format="reference"/>
    <attr name="ebThemeOverlayInverse" format="reference"/>

    <attr name="ebSimplePreferenceGroupStyle" format="reference"/>
    <attr name="ebFooterPreferenceStyle" format="reference"/>

    <declare-styleable name="EBSimpleSwitchPreference">
        <attr name="ebIconOff" format="reference"/>
        <attr name="ebIconOn" format="reference"/>
    </declare-styleable>

    <bool name="eb_is_not_night">true</bool>

    <color name="eb_status_bar">@color/eb_white</color>
    <color name="eb_window_background">@color/eb_material_gray_50</color>
    <color name="eb_primary">@color/eb_material_light_blue_500</color>
    <color name="eb_secondary">@color/eb_material_pink_a200</color>

    <style name="EBBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/eb_window_background</item>
        <item name="android:windowLightStatusBar">@bool/eb_is_not_night</item>
        <item name="android:statusBarColor">@color/eb_status_bar</item>
        <item name="colorPrimary">@color/eb_primary</item>
        <item name="colorPrimaryDark">@color/eb_primary</item>
        <item name="colorAccent">@color/eb_primary</item>
        <item name="colorSecondary">@color/eb_secondary</item>
        <item name="preferenceTheme">@style/EBPreferenceTheme</item>
        <item name="ebThemeOverlay">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="ebThemeOverlayInverse">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="EBPreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="singleLineTitle">false</item>
        <item name="preferenceCategoryStyle">@style/EBPreferenceCategoryStyle</item>
        <item name="seekBarPreferenceStyle">@style/EBSeekBarPreferenceStyle</item>
        <item name="ebSimplePreferenceGroupStyle">@style/EBSimplePreferenceGroupStyle</item>
        <item name="ebFooterPreferenceStyle">@style/EBFooterPreferenceStyle</item>
    </style>

    <style name="EBSimplePreferenceGroupStyle" parent="Preference.Material">
        <item name="android:layout">@layout/eb_simple_preference_group</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="allowDividerAfterLastItem">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="EBFooterPreferenceStyle" parent="Preference.Material">
        <item name="android:layout">@layout/eb_footer_preference</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="allowDividerAfterLastItem">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
    </style>

    <style name="EBPreferenceCategoryStyle" parent="Preference.Category.Material">
        <item name="android:shouldDisableView">true</item>
    </style>

    <style name="EBSeekBarPreferenceStyle" parent="Preference.SeekBarPreference.Material">
        <item name="showSeekBarValue">true</item>
        <item name="updatesContinuously">true</item>
    </style>

    <!-- Base theme. -->
    <style name="EBTheme" parent="EBBaseTheme"/>
</resources>
